{
  "theme": {
    "slug": "wp-rig",
    "name": "WP Rig",
    "author": "The WP Rig Contributors",
    "PHPNamespace": "WP_Rig\\WP_Rig"
  },
  "dev": {
    "browserSync": {
      "live": true,
      "proxyURL": "wprig.test:8888",
      "bypassPort": "8181",
      "https": false
    },
    "styles": {
      "preserve": true,
      "customProperties": [
        "custom-properties.css"
      ],
      "customMedia": [
        "custom-media.css"
      ],
      "ignoredSourceFiles": [
        "reset.css",
        "custom-properties.css",
        "custom-media.css"
      ]
    },
    "scripts": {
      "ignoredSourceFiles": []
    },
    "debug": {
      "styles": false,
      "scripts": false,
      "phpcs": true
    }
  },
  "export": {
    "compress": true,
    "filesToCopy": [
      "LICENSE",
      "readme.txt",
      "style.css",
      "screenshot.png"
    ]
  }
}
